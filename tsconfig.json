{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".", // this must be specified if "paths" is specified.
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@cms/*": ["src/cms/*"],
      "@img/*": ["src/img/*"],
      "@templates/*": ["src/templates/*"],
      "@root/*": ["src/*"]
    }
  }
}
